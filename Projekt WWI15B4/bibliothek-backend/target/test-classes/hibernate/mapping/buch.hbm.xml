<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="com/bibliothek/verwaltung/beans/Buch" table="Buch">
      <meta attribute="class-description">
         This class contains the buch detail. 
      </meta>
      <id name="id" type="int" column="id">
         <generator class="native"/>
      </id>
      <property name="titel" column="titel" type="string"/>
      <property name="autor" column="autor" type="string"/>
      <property name="erscheinungsjahr" column="erscheinungsjahr" type="int"/>
      <property name="auflage" column="auflage" type="int"/>
      <property name="isbn" column="isbn" type="int"/>
      <property name="kategorie" column="kategorie" type="string"/>
   </class>
</hibernate-mapping>
